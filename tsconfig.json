{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./scripts",
    "declaration": false,
    "noEmit": true
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "dist", "public"]
}
